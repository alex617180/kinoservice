FROM python:3.12

EXPOSE 8000

WORKDIR /web/django_admin

# Install system dependencies
RUN apt-get update && apt-get install -y \
    sqlite3 \
    gcc \
    libssl-dev \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copying the project files
COPY ./django_admin .
# Copying .env file
COPY .env ./config/.env

# Create directories for static and media files and install dependencies
RUN mkdir -p ./static ./media \
    && chown -R www-data:www-data ./static ./media \
    && pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Collect static files
RUN python manage.py collectstatic --noinput

# Add a non-root user
RUN adduser -u 5678 --disabled-password --gecos "" appuser && chown -R appuser /web
USER appuser

# Default CMD overridden during debugging
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "config.wsgi"]
